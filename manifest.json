{
  "manifest_version": 2,

  "name": "Codec",
  "description": "A chrome extension to binge watch and learn to code at the same time.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://secure.flickr.com/",
    "webRequest",
    "webRequestBlocking",
    "*://*.hulu.com/*"
  ]
}